# --- Ensure modern TLS ---
[Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12

# --- Prompt for credentials ---
$Username = Read-Host "Enter your Qualys API username"
$SecurePassword = Read-Host "Enter your Qualys API password" -AsSecureString

$bstr = [System.Runtime.InteropServices.Marshal]::SecureStringToBSTR($SecurePassword)
try {
    $PlainPassword = [System.Runtime.InteropServices.Marshal]::PtrToStringAuto($bstr)
    $pair = "${Username}:${PlainPassword}"
    $encodedCreds = [Convert]::ToBase64String([Text.Encoding]::ASCII.GetBytes($pair))
} finally {
    [System.Runtime.InteropServices.Marshal]::ZeroFreeBSTR($bstr)
    $PlainPassword = $null
    $pair = $null
}

$Headers = @{
    Authorization    = "Basic $encodedCreds"
    "X-Requested-With" = "PowerShell"
}

# --- Configuration ---
$TagName = "Retail Store Prod Deployment 2025"
$DaysThreshold = 30
$DateThreshold = (Get-Date).AddDays(-$DaysThreshold).ToString("yyyy-MM-dd")

# --- Base URL and Query ---
$BaseUrl = "https://qualysapi.qg4.apps.qualys.com/api/2.0/fo/asset/host/"
# --- Build query string ---
# Removed vm_scan_since temporarily to see if it clears the 400 error
# Changed tag_set_by to 'id' if 'name' fails, but keeping name for now with adjusted selector
$qs = "action=list" +
      "&use_tags=1" +
      "&tag_include_selector=any" +
      "&tag_set_by=name" +
      "&tag_set_include=$([uri]::EscapeDataString('Retail Store Prod Deployment 2025'))" +
      "&output_format=csv"

$Uri = "$BaseUrl`?$qs"

# --- Resolve Local Path ---
try {
    $DownloadsPath = (New-Object -ComObject Shell.Application).Namespace('shell:Downloads').Self.Path
} catch {
    $DownloadsPath = Join-Path $env:USERPROFILE 'Downloads'
}
$OutputCsv = Join-Path $DownloadsPath "Qualys_Retail_Assets_Last30Days.csv"

Write-Host "Fetching assets with tag '$TagName' checked in since $DateThreshold..." -ForegroundColor Cyan

# --- API Request ---
try {
    $resp = Invoke-WebRequest -Uri $Uri -Headers $Headers -Method Get -OutFile $OutputCsv -UseBasicParsing

    if (Test-Path $OutputCsv) {
        # --- Count Assets ---
        # Import the CSV to count rows accurately. 
        # Note: Qualys CSVs often have metadata at the top/bottom. 
        # We skip the first few lines if they are just headers.
        $csvData = Import-Csv -Path $OutputCsv -ErrorAction SilentlyContinue
        
        if ($csvData) {
            $totalAssets = $csvData.Count
            Write-Host "Success! Document stored at: $OutputCsv" -ForegroundColor Green
            Write-Host "--------------------------------------------------" -ForegroundColor Gray
            Write-Host "Total Assets Retrieved: " -NoNewline
            Write-Host "$totalAssets" -ForegroundColor Yellow -Bold
            Write-Host "--------------------------------------------------" -ForegroundColor Gray
        } else {
            # Fallback if Import-Csv fails due to Qualys header format
            $rawLines = Get-Content $OutputCsv
            $dataLines = $rawLines | Where-Object { $_ -match '^\d{1,3}\.' -or $_ -match '^"\d{1,3}\.' } # Matches lines starting with IP
            $totalAssets = ($dataLines | Measure-Object).Count
            
            Write-Host "Success! Document stored at: $OutputCsv" -ForegroundColor Green
            Write-Host "Total Assets (Estimated): $totalAssets" -ForegroundColor Yellow
        }
    }
}
catch {
    Write-Host "Error connecting to Qualys API: $($_.Exception.Message)" -ForegroundColor Red
}
finally {
    $encodedCreds = $null
}
