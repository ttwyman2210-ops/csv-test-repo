% Active vs Silent :=
VAR Numerator =
    DISTINCTCOUNT(Assets[AssetID])
VAR Denominator =
    CALCULATE(
        DISTINCTCOUNT(Assets[AssetID]),
        ALL(Assets[Status]),
        Assets[Status] IN {"Active", "Silent"}
    )
RETURN
IF(
    SELECTEDVALUE(Assets[Status]) IN {"Active", "Silent"},
    DIVIDE(Numerator, Denominator),
    BLANK()
)
